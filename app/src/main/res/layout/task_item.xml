<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:id="@+id/name"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp" app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.216"/>
    <TextView
        android:text="TextView"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"/>
</android.support.constraint.ConstraintLayout>
